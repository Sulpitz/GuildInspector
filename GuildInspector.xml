<Ui
	xmlns="http://www.blizzard.com/wow/ui/"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/">

	<Script file="GuildInspector.lua"/>

	<!-- GuildInspector Virtual -->
	<FontString name="GuildInspectorUiWindowListNameFontstring" frameStrata="DIALOG" inherits="GameFontNormalSmall" text="Player Name" justifyH="LEFT" justifyV="MIDDLE" virtual="true">
		<Color r="1" g="1" b="1" a="1"/>
		<FontHeight val="10"/>
		<Anchors>
			<Anchor point="TOPLEFT" relativeTo="$parent" x="5" y="-5" />
		</Anchors>
	</FontString>

	<Button name="GuildInspectorSortButton" virtual="true" justifyH="LEFT">
		<Size>
			<AbsDimension x="30" y="20" />
		</Size>
		<ButtonText style="$parentText"/>
		<NormalFont style="GameFontNormal"/>
		<HighlightFont style="GameFontHighlight"/>
		<DisabledFont style="GameFontDisable"/>
	</Button>

	<Frame name="GuildInspectorBackgroundBar" virtual="true">
		<Size>
			<AbsDimension x="1000" y="15"/>
		</Size>
		<Anchors>
			<Anchor point="LEFT" relativePoint="LEFT"></Anchor>
		</Anchors>
		<Backdrop bgFile="Interface\\Tooltips\\UI-Tooltip-Background">
			<Color a="0.5" r="0" g="0" b="0" />
		</Backdrop>
	</Frame>

	<Button name="GuildInspectorWhisperButton" virtual="true" justifyH="LEFT">
		<Size>
			<AbsDimension x="120" y="15" />
		</Size>
		<Anchors>
			<Anchor point="TOPLEFT" relativePoint="TOPLEFT"></Anchor>
		</Anchors>
		<Scripts>
			<OnClick>
      			GuildInspector_OnClickGuildMemdber(self)
			</OnClick>
		</Scripts>
	</Button>	

	<CheckButton name="ScrollFrameCheckButtonTemplate" inherits="OptionsCheckButtonTemplate" virtual="true">
		<HitRectInsets>
			<AbsInset left="0" right="0" top="0" bottom="0"/>
		</HitRectInsets>
		<Size>
			<AbsDimension x="17" y="17" />
		</Size>
		<Scripts>
			<OnEnter>
				getglobal(self:GetParent():GetName().."_Highlight"):Show();
			</OnEnter>
			<OnLeave>
				getglobal(self:GetParent():GetName().."_Highlight"):Hide();
			</OnLeave>
		</Scripts>
	</CheckButton>

	<Frame name="GuildInspectorScrollFrameEntry" inherits="BackdropTemplate" virtual="true">
        <Size x="1000" y="15" />
        <KeyValues>
            <KeyValue key="backdropInfo" value="GuildInspector_BACKDROP_SIMPLE" type="global" />
            <KeyValue key="backdropColor" value="GuildInspector_GREEN" type="global" />								
       		<KeyValue key="backdropColorAlpha" value="0.5" type="number"/>
        </KeyValues>
        <Scripts>
            <OnLoad inherit="prepend">
		  		self:OnBackdropLoaded()
            </OnLoad>
        </Scripts>
		<Frames>
			<Button name="$parent_WHISPERBUTTON">
				<Size>
					<AbsDimension x="110" y="15" />
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" x="3"></Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
    		  			GuildInspector_OnClickGuildMemdber(self)
					</OnClick>
				</Scripts>	
			</Button>
		</Frames>
        <Layers>
            <Layer>
                <FontString name="$parent_LEVEL" inherits="GameFontHighlightSmall">
                    <Anchors>
                        <Anchor point="LEFT" relativePoint="LEFT" relativeTo="$parent" x="5"/>
                    </Anchors>
                </FontString>
                <FontString name="$parent_NAME" inherits="GameFontHighlightSmall">
                    <Anchors>
                        <Anchor point="LEFT" relativePoint="LEFT" relativeTo="$parent_LEVEL" x="25"/>
                    </Anchors>
                </FontString>
                <FontString name="$parent_RANK" inherits="GameFontHighlightSmall">
                    <Anchors>
                        <Anchor point="LEFT" relativePoint="LEFT" relativeTo="$parent_NAME" x="90"/>
                    </Anchors>
                </FontString>
                <FontString name="$parent_ZONE" inherits="GameFontHighlightSmall">
                    <Anchors>
                        <Anchor point="LEFT" relativePoint="LEFT" relativeTo="$parent_RANK" x="90"/>
                    </Anchors>
                </FontString>
                <FontString name="$parent_NOTE" inherits="GameFontHighlightSmall">
                    <Anchors>
                        <Anchor point="LEFT" relativePoint="LEFT" relativeTo="$parent_ZONE" x="155"/>
                    </Anchors>
                </FontString>
                <FontString name="$parent_OFFICERNOTE" inherits="GameFontHighlightSmall">
                    <Anchors>
                        <Anchor point="LEFT" relativePoint="LEFT" relativeTo="$parent_NOTE" x="200"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
    </Frame>

	<Button name="GuildInspectorScrollFrameEntry.bak" virtual="true">
        <Size x="400" y="15" />
        <Layers>
            <Layer>
                <FontString name="$parent_EP" inherits="GameFontHighlightSmall">
                    <Anchors>
                        <Anchor point="LEFT" relativePoint="LEFT" relativeTo="$parent" x="15"/>
                    </Anchors>
                </FontString>
                <FontString name="$parent_GP" inherits="GameFontHighlightSmall">
                    <Anchors>
                        <Anchor point="LEFT" relativePoint="LEFT" relativeTo="$parent" x="100"/>
                    </Anchors>
                </FontString>
                <FontString name="$parent_Date" inherits="GameFontHighlightSmall">
                    <Anchors>
                        <Anchor point="LEFT" relativePoint="LEFT" relativeTo="$parent" x="185"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
    </Button>

	<!-- GuildInspector Main Frame -->
	<Frame name="GuildInspector" hidden="true">
		<Scripts>
			<OnLoad function="GuildInspector_OnLoad"/>
			<OnEvent function="GuildInspector_OnEvent"/>
		</Scripts>
	</Frame>

	<!-- GuildInspector UI Window -->
	<Frame name="GuildInspectorUiWindow" frameStrata="DIALOG" parent="UIParent" hidden="true" movable="true" enableMouse="true" inherits="BackdropTemplate">
		<KeyValues>
			<KeyValue key="backdropInfo" value="GuildInspector_BACKDROP" type="global" />
			<KeyValue key="backdropColor" value="GuildInspector_BLACK" type="global" />
		</KeyValues>
		<Size>
			<AbsDimension x="560" y="485"/>
		</Size>
		<Anchors>
			<Anchor point="TOP" />
		</Anchors>
		<Scripts>
			<OnLoad inherit="prepend">
       			self:RegisterForDrag("LeftButton");
       			tinsert(UISpecialFrames, self:GetName())
       			GuildInspector_ScrollFrane()
     		 </OnLoad>
			<OnDragStart>
       			self:StartMoving();
      		</OnDragStart>
			<OnDragStop>
       			self:StopMovingOrSizing();
      		</OnDragStop>
		</Scripts>
		<Frames>
			<Button name="$parent_SortLvl" inherits="GuildInspectorSortButton" text="Lvl">
				<Size>
					<AbsDimension x="20" y="20" />
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativePoint="TOPLEFT" relativeTo="GuildInspectorUiWindow">
						<Offset>
							<AbsDimension x="8" y="-2" />
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
							GuildInspector_Sort(self)
						</OnClick>
				</Scripts>
			</Button>
			<Button name="$parent_SortName" inherits="GuildInspectorSortButton" text="Name">
				<Size>
					<AbsDimension x="35" y="20" />
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativePoint="TOPLEFT" relativeTo="GuildInspectorUiWindow">
						<Offset>
							<AbsDimension x="33" y="-2" />
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						GuildInspector_Sort(self)
					</OnClick>
				</Scripts>
			</Button>
			<Button name="$parent_SortClass" inherits="GuildInspectorSortButton" text="(Class)">
				<Size>
					<AbsDimension x="40" y="20" />
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativePoint="TOPLEFT" relativeTo="GuildInspectorUiWindow">
						<Offset>
							<AbsDimension x="72" y="-2" />
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						GuildInspector_Sort(self)
					</OnClick>
				</Scripts>
			</Button>
			<Button name="$parent_SortRank" inherits="GuildInspectorSortButton" text="Rank">
				<Anchors>
					<Anchor point="TOPLEFT" relativePoint="TOPLEFT" relativeTo="GuildInspectorUiWindow">
						<Offset>
							<AbsDimension x="122" y="-2" />
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						GuildInspector_Sort(self)
					</OnClick>
				</Scripts>
			</Button>
			<Button name="$parent_SortZone" inherits="GuildInspectorSortButton" text="Zone">
				<Anchors>
					<Anchor point="TOPLEFT" relativePoint="TOPLEFT" relativeTo="GuildInspectorUiWindow">
						<Offset>
							<AbsDimension x="212" y="-2" />
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						GuildInspector_Sort(self)
					</OnClick>
				</Scripts>
			</Button>
			<Button name="$parent_SortNote" inherits="GuildInspectorSortButton" text="Note">
				<Anchors>
					<Anchor point="TOPLEFT" relativePoint="TOPLEFT" relativeTo="GuildInspectorUiWindow">
						<Offset>
							<AbsDimension x="367" y="-2" />
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						GuildInspector_Sort(self)
					</OnClick>
				</Scripts>
			</Button>
			<Button name="$parent_ShowOffline" inherits="GuildInspectorSortButton" text="Show Offline">
				<Size>
					<AbsDimension x="80" y="20" />
				</Size>
				<Anchors>
					<Anchor point="TOPRIGHT" relativePoint="TOPRIGHT" relativeTo="GuildInspectorUiWindow">
						<Offset>
							<AbsDimension x="-2" y="-2" />
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						if self:GetText() == "Show Offline" then
        					self:SetText("Show Online")
        					GuildInspector_showOffline = true
							GuildFrameLFGButton:GetScript("OnClick")(GuildFrameLFGButton)
							FriendsFrameCloseButton:GetScript("OnClick")(FriendsFrameCloseButton)
        				else
        					self:SetText("Show Offline")
        					GuildInspector_showOffline = false
        				end
        				GuildInspector_UpdateGuildRoster()
					</OnClick>
				</Scripts>
			</Button>
    		<ScrollFrame name="$parent_ScrollFrame" inherits="UIPanelScrollFrameTemplate, BackdropTemplate">
    			<KeyValues>
    			    <KeyValue key="backdropInfo" value="GuildInspector_BACKDROP_SIMPLE" type="global" />
    			    <KeyValue key="backdropColor" value="GuildInspector_BLUE" type="global" />
        			<KeyValue key="backdropColorAlpha" value="0.25" type="number"/>
    			</KeyValues>
    		    <Anchors>
    		        <Anchor point="TOPLEFT" relativePoint="TOPLEFT" relativeTo="$parent" x="3" y="-25" />
    		        <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" relativeTo="$parent" x="-25" y="5" />
    		    </Anchors>
    		    <ScrollChild>
    		        <Frame name="GuildInspector_ScrollFrame_Container" inherits="BackdropTemplate">
    					<KeyValues>
    					    <KeyValue key="backdropInfo" value="GuildInspector_BACKDROP_SIMPLE" type="global" />
    					    <KeyValue key="backdropColor" value="GuildInspector_RED" type="global" />									
       						<KeyValue key="backdropColorAlpha" value="0.25" type="number"/>
    					</KeyValues>
    		            <Size>
    		                <AbsDimension x="250" y="200" />
    		            </Size>
    		            <Frames>
    		            </Frames>
    		        </Frame>
    		    </ScrollChild>
    		</ScrollFrame>
		</Frames>
		<Layers>
			<Layer level="DIALOG">
				<FontString name="$parent_OfficerNote" inherits="GameFontNormal" text="Officer Note" hidden="true">
					<Anchors>
						<Anchor point="TOPLEFT" relativePoint="TOPLEFT" relativeTo="GuildInspectorUiWindow">
							<Offset>
								<AbsDimension x="568" y="-6" />
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
	</Frame>
</Ui>


